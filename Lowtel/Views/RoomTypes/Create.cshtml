@model Lowtel.Models.RoomType

@{
    ViewData["Title"] = "Create Room-Type";
}

<h2>@ViewData["Title"]</h2>

<h4>RoomType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" id="roomTypeNumber" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceForNight" class="control-label"></label>
                <input asp-for="PriceForNight" class="form-control" />
                <span asp-validation-for="PriceForNight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    GetLastRoomTypeId();
        function GetLastRoomTypeId() {
        $.ajax({
            type: "GET",
            url: "/RoomTypes/GetLastTypeId",
            success: function (lastRoomTypeId) {
                $("#roomTypeNumber").val(lastRoomTypeId + 1);
                $("#roomTypeNumber").attr("min", lastRoomTypeId + 1);
            },
            error: function (err) {
                console.error(err);
            }
        });
    }   
</script>
